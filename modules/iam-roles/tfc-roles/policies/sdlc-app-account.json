{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ec2:*",
                "elasticloadbalancing:*",
                "autoscaling:*",
                "cloudwatch:*",
                "s3:*",
                "rds:*",
                "route53:*",
                "iam:*",
                "logs:*",
                "elasticache:*",
                "secretsmanager:*",
                "ssm:*",
                "kms:*",
                "ecs:*",
                "application-autoscaling:*",
                "servicediscovery:*",
                "elasticfilesystem:*",
                "sns:*",
                "sqs:*",
                "acm:*",
                "cloudfront:*"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:RequestedRegion": "us-west-2",
                    "aws:ResourceTag/Account": "sdlc-app",
                    "aws:ResourceTag/Environment": "sdlc"
                }
            }
        },
        {
            "Effect": "Allow",
            "Action": [
                "iam:CreateRole",
                "iam:DeleteRole",
                "iam:GetRole",
                "iam:PutRolePolicy",
                "iam:DeleteRolePolicy",
                "iam:GetRolePolicy",
                "iam:AttachRolePolicy",
                "iam:DetachRolePolicy",
                "iam:ListAttachedRolePolicies",
                "iam:TagRole",
                "iam:UntagRole",
                "iam:ListRolePolicies",
                "iam:ListInstanceProfilesForRole"
            ],
            "Resource": "arn:aws:iam::*:role/sdlc-app-*"
        }
    ]
} 